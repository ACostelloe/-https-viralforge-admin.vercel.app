# ViralForge Admin Panel - Environment Variables
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# API Configuration
# =============================================================================
VITE_API_BASE_URL=https://your-backend-api.com/api
VITE_APP_ENV=development

# =============================================================================
# OpenAI Configuration
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
VITE_OPENAI_API_KEY=sk-your-openai-api-key-here

# =============================================================================
# Twitter/X API Configuration
# =============================================================================
# Get your keys from: https://developer.twitter.com/en/portal/dashboard
VITE_TWITTER_API_KEY=your-twitter-api-key
VITE_TWITTER_API_SECRET=your-twitter-api-secret
VITE_TWITTER_ACCESS_TOKEN=your-twitter-access-token
VITE_TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret
VITE_TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# =============================================================================
# Instagram API Configuration
# =============================================================================
# Get your credentials from: https://developers.facebook.com/apps/
VITE_INSTAGRAM_CLIENT_ID=your-instagram-client-id
VITE_INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret
VITE_INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token

# =============================================================================
# Facebook API Configuration
# =============================================================================
# Get your credentials from: https://developers.facebook.com/apps/
VITE_FACEBOOK_APP_ID=your-facebook-app-id
VITE_FACEBOOK_APP_SECRET=your-facebook-app-secret
VITE_FACEBOOK_ACCESS_TOKEN=your-facebook-access-token

# =============================================================================
# LinkedIn API Configuration
# =============================================================================
# Get your credentials from: https://www.linkedin.com/developers/apps
VITE_LINKEDIN_CLIENT_ID=your-linkedin-client-id
VITE_LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
VITE_LINKEDIN_ACCESS_TOKEN=your-linkedin-access-token

# =============================================================================
# Analytics & Monitoring
# =============================================================================
# Google Analytics - Get from: https://analytics.google.com/
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Sentry Error Tracking - Get from: https://sentry.io/
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Hotjar Analytics - Get from: https://www.hotjar.com/
VITE_HOTJAR_ID=your-hotjar-id

# LogRocket Session Replay - Get from: https://logrocket.com/
VITE_LOGROCKET_APP_ID=your-logrocket-app-id

# =============================================================================
# Feature Flags & Configuration
# =============================================================================
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_DEBUG_MODE=false

# =============================================================================
# Deployment Configuration
# =============================================================================
# Base URL for routing (useful for subdirectory deployments)
VITE_BASE_URL=/

# CDN URL for assets (optional)
VITE_CDN_URL=

# =============================================================================
# Development Only
# =============================================================================
# Mock API responses for development
VITE_USE_MOCK_API=false

# Enable development tools
VITE_ENABLE_DEV_TOOLS=true

# =============================================================================
# Security Configuration
# =============================================================================
# CORS allowed origins (comma-separated)
VITE_CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# Content Security Policy
VITE_CSP_ENABLED=true

# =============================================================================
# Performance Configuration
# =============================================================================
# Enable service worker for caching
VITE_ENABLE_SW=true

# Enable code splitting
VITE_ENABLE_CODE_SPLITTING=true

# Bundle analyzer
VITE_ANALYZE_BUNDLE=false 