{
  "version": 2,
  "name": "viralforge-admin-panel",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://your-backend-api.vercel.app/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "env": {
    "VITE_API_BASE_URL": "@vite_api_base_url",
    "VITE_APP_ENV": "production"
  },
  "build": {
    "env": {
      "VITE_API_BASE_URL": "@vite_api_base_url",
      "VITE_OPENAI_API_KEY": "@vite_openai_api_key",
      "VITE_TWITTER_API_KEY": "@vite_twitter_api_key",
      "VITE_TWITTER_API_SECRET": "@vite_twitter_api_secret",
      "VITE_INSTAGRAM_CLIENT_ID": "@vite_instagram_client_id",
      "VITE_INSTAGRAM_CLIENT_SECRET": "@vite_instagram_client_secret",
      "VITE_FACEBOOK_APP_ID": "@vite_facebook_app_id",
      "VITE_FACEBOOK_APP_SECRET": "@vite_facebook_app_secret",
      "VITE_LINKEDIN_CLIENT_ID": "@vite_linkedin_client_id",
      "VITE_LINKEDIN_CLIENT_SECRET": "@vite_linkedin_client_secret",
      "VITE_SENTRY_DSN": "@vite_sentry_dsn",
      "VITE_GOOGLE_ANALYTICS_ID": "@vite_google_analytics_id"
    }
  },
  "functions": {
    "app/api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  }
} 