# ViralForge AI Configuration
# Copy this file to .env and fill in your actual values

# =================================
# Application Settings
# =================================
APP_NAME=ViralForge AI
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO
SECRET_KEY=your-super-secret-key-change-this-in-production

# =================================
# Database Configuration
# =================================
DATABASE_URL=postgresql://username:password@localhost:5432/viralforge_ai
DATABASE_ECHO=False

# =================================
# Redis Configuration (Celery)
# =================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =================================
# AI Service API Keys
# =================================
# OpenAI (GPT-4, DALL-E 3)
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key

# Stability AI (Stable Diffusion)
STABILITY_API_KEY=your-stability-api-key

# ElevenLabs (Text-to-Speech)
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# Azure Cognitive Services (TTS Alternative)
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=your-azure-region

# RunwayML (Video Generation)
RUNWAYML_API_KEY=your-runwayml-api-key

# Pika Labs (Video Generation Alternative)
PIKA_LABS_API_KEY=your-pika-labs-api-key

# Synthesia (AI Avatar Videos)
SYNTHESIA_API_KEY=your-synthesia-api-key

# =================================
# Social Media Platform APIs
# =================================
# Instagram Graph API
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret
INSTAGRAM_ACCESS_TOKEN=your-long-lived-access-token

# TikTok API
TIKTOK_CLIENT_ID=your-tiktok-client-id
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
TIKTOK_ACCESS_TOKEN=your-tiktok-access-token

# =================================
# Trending & Data APIs
# =================================
# Google Trends (No API key needed for pytrends)
GOOGLE_TRENDS_ENABLED=True

# Google Places API (for location data)
GOOGLE_PLACES_API_KEY=your-google-places-api-key

# IPStack Geolocation API
IPSTACK_API_KEY=your-ipstack-api-key

# =================================
# AWS Configuration (Optional)
# =================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=viralforge-ai-assets

# =================================
# Content Generation Settings
# =================================
# Daily content generation frequency
DAILY_CONTENT_COUNT=3

# Content types to generate (comma-separated)
CONTENT_TYPES=facts,trivia,memes,quotes,location_content

# Video settings
VIDEO_DURATION_MIN=10
VIDEO_DURATION_MAX=60
VIDEO_QUALITY=1080p

# Audio settings
TTS_VOICE_ID=default
TTS_STABILITY=0.75
TTS_SIMILARITY_BOOST=0.75

# =================================
# Scheduling & Automation
# =================================
# Timezone for scheduling (e.g., UTC, America/New_York)
TIMEZONE=UTC

# Enable auto-posting
AUTO_POSTING_ENABLED=True

# Posting frequency per platform (posts per day)
INSTAGRAM_POSTS_PER_DAY=2
TIKTOK_POSTS_PER_DAY=3

# =================================
# Target Audience Settings
# =================================
# Target locations (comma-separated country codes)
TARGET_LOCATIONS=US,CA,GB,AU

# Target age groups (comma-separated)
TARGET_AGE_GROUPS=18-24,25-34,35-44

# Language settings
PRIMARY_LANGUAGE=en
MULTILINGUAL_ENABLED=False
SUPPORTED_LANGUAGES=en,es,fr,de

# =================================
# Analytics & Monitoring
# =================================
# Enable performance tracking
ANALYTICS_ENABLED=True

# Minimum engagement rate threshold
MIN_ENGAGEMENT_RATE=0.02

# Analytics reporting frequency (hours)
ANALYTICS_REPORT_FREQUENCY=24

# =================================
# Security Settings
# =================================
# JWT settings
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =================================
# Webhook & Notifications
# =================================
# Slack webhook for notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/your-webhook-url

# Email notifications (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
NOTIFICATION_EMAIL=admin@yourcompany.com

# =================================
# Development Settings
# =================================
# Enable debug mode
DEVELOPMENT_MODE=True

# Mock API calls during development
MOCK_API_CALLS=False

# Test account credentials
TEST_INSTAGRAM_ACCOUNT=test_account_username
TEST_TIKTOK_ACCOUNT=test_account_username 